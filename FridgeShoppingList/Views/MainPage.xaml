<Page x:Class="FridgeShoppingList.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"      
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:FridgeShoppingList.Views"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:FridgeShoppingList.ViewModels"
      xmlns:ctCtls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:models="using:FridgeShoppingList.Models"
      xmlns:selectors="using:FridgeShoppingList.TemplateSelectors"
      xmlns:ctls="using:FridgeShoppingList.Controls"
      mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="GroupedItemTemplate">
        </DataTemplate>

        <DataTemplate x:Key="SingleItemTemplate">
            <ctCtls:SlidableListItem HorizontalAlignment="Stretch"
                                     ActivationWidth="100"                                     
                                     IsLeftCommandEnabled="True"
                                     LeftBackground="{ThemeResource LcarsBlueGrayBrush}"
                                     LeftForeground="White"
                                     LeftLabel="+ Shopping List"
                                     IsRightCommandEnabled="True"
                                     RightBackground="{ThemeResource LcarsRedBrush}"
                                     RightForeground="White"
                                     RightLabel="- Delete"
                                     MouseSlidingEnabled="True">
                <TextBlock Text="Grocery Item!" Style="{ThemeResource LcarsTitleTextBlockStyle}"/>
            </ctCtls:SlidableListItem>
        </DataTemplate>

        <selectors:GroceryItemTemplateSelector x:Key="GroceryTemplateSelector"  
                                               GroupedItemTemplate="{StaticResource GroupedItemTemplate}"
                                               SingleItemTemplate="{StaticResource SingleItemTemplate}"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          Padding="0 20 0 20">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveVisualStateGroup">
                <VisualState x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <RelativePanel x:Name="InventoryPanel">
            <ctls:LcarsHeader x:Name="InventoryHeader" 
                              RelativePanel.AlignTopWithPanel="True"
                              RelativePanel.AlignLeftWithPanel="True"
                              RelativePanel.AlignRightWithPanel="True"
                              FrameReference="{x:Bind ViewModel.NavigationService.Frame}"
                              Text="INVENTORY"/>

            <SplitView x:Name="InventoryContent" 
                       RelativePanel.Above="InventoryFooter"
                       RelativePanel.Below="InventoryHeader"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"                          
                       DisplayMode="Inline"
                       IsPaneOpen="True"
                       OpenPaneLength="140">
                <SplitView.Pane>
                    <Grid Background="Black">

                        <StackPanel x:Name="InventoryControlPanel" 
                                    Grid.Row="0" 
                                    Background="{ThemeResource LcarsAccentBrush}">
                            <ListViewItem BorderBrush="Black" BorderThickness="0,2,0,2" Tapped="{x:Bind ViewModel.GotoSettings, Mode=OneTime}">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                              Foreground="Black"
                                              Glyph="{Binding Source={StaticResource FontIcons}, Path=Ethernet}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Foreground="Black" 
                                               FontSize="25"
                                               Margin="5 0 0 0"
                                               Style="{ThemeResource LcarsBaseTextBlockStyle}"
                                               Text="SETTINGS"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </ListViewItem>
                        </StackPanel>
                    </Grid>
                </SplitView.Pane>
                <SplitView.Content>

                    <RelativePanel Margin="10 0 10 0">
                        <ListView x:Name="FridgeItemsList"
                                  RelativePanel.AlignLeftWithPanel="True"
                                  RelativePanel.AlignRightWithPanel="True"                                  
                                  ItemTemplateSelector="{StaticResource GroceryTemplateSelector}"
                                  ItemsSource="{x:Bind ViewModel.GroceryItems, Mode=OneWay}">

                        </ListView>
                    </RelativePanel>

                </SplitView.Content>
            </SplitView>
            <ctls:LcarsFooter x:Name="InventoryFooter"                     
                       RelativePanel.AlignBottomWithPanel="True"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"
                              Margin="0 0 0 10"/>
        </RelativePanel>

        <RelativePanel x:Name="ShoppingPanel" 
                       Grid.Row="1"
                       Margin="0 10 0 0">
            <ctls:LcarsHeader x:Name="ShoppingListHeader" 
                              RelativePanel.AlignTopWithPanel="True"
                              RelativePanel.AlignLeftWithPanel="True"
                              RelativePanel.AlignRightWithPanel="True" 
                              Foreground="{ThemeResource LcarsBlueGrayBrush}"
                              Text="SHOPPING LIST"/>
            <SplitView x:Name="ShoppingListContent"
                       RelativePanel.Below="ShoppingListHeader"
                       RelativePanel.Above="ShoppingListFooter"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"
                       DisplayMode="Inline"
                       IsPaneOpen="True"
                       OpenPaneLength="140">
                <SplitView.Pane>
                    <Grid Background="Black">
                        <StackPanel Background="{ThemeResource LcarsBlueGrayBrush}"/>
                    </Grid>
                </SplitView.Pane>

                <SplitView.Content>
                    <RelativePanel Margin="10 0 10 0"/>
                </SplitView.Content>

            </SplitView>

            <ctls:LcarsFooter x:Name="ShoppingListFooter"                        
                              RelativePanel.AlignBottomWithPanel="True"
                              RelativePanel.AlignLeftWithPanel="True"
                              RelativePanel.AlignRightWithPanel="True"
                              Foreground="{ThemeResource LcarsBlueGrayBrush}"
                              Text="22"/>

        </RelativePanel>
    </Grid>
</Page>

